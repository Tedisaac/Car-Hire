<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

   <RelativeLayout
       android:id="@+id/profile_page_image_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/profile_page_image"
           android:layout_width="200dp"
           android:layout_height="200dp"
           android:layout_margin="20dp"
           android:layout_centerHorizontal="true"
           android:src="@drawable/user"/>
   </RelativeLayout>

  <RelativeLayout
      android:id="@+id/profile_page_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_page_image_layout">

      <TextView
          android:id="@+id/profile_page_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Name"
          android:textSize="20sp"/>
      <TextView
          android:id="@+id/profile_page_email"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/profile_page_name"
          android:text="Email"
          android:textSize="20sp"/>
      <TextView
          android:id="@+id/profile_page_gender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/profile_page_email"
          android:text="Dender"
          android:textSize="20sp"/>

  </RelativeLayout>
  <RelativeLayout
      android:id="@+id/profile_save"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/profile_page_info"
      android:layout_margin="20dp"
      android:background="@drawable/button_bg">

      <ImageView
          android:id="@+id/profile_save_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/save"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/profile_save_image"
          android:text="SAVE"
          android:textSize="20sp"/>
  </RelativeLayout>


</RelativeLayout>