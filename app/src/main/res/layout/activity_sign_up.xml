<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@drawable/edittext_bg">
            <ImageView
                android:id="@+id/person_name_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_baseline_person_24"/>
            <EditText
                android:id="@+id/name_text_sign_up"
                android:layout_toRightOf="@id/person_name_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/edittext_bg"
                android:hint="Name"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/email_layout_sign_up"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@id/name_layout"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@drawable/edittext_bg">
            <ImageView
                android:id="@+id/person_image_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_baseline_person_24"/>
            <EditText
                android:id="@+id/email_text_sign_up"
                android:layout_toRightOf="@id/person_image_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/edittext_bg"
                android:hint="Email"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/password_layout"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/email_layout_sign_up"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:id="@+id/password_image_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_baseline_person_24" />
            <EditText
                android:id="@+id/password_sign_up"
                android:layout_toRightOf="@id/password_image_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/edittext_bg"
                android:hint="Password"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/confirm_password_layout"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/password_layout"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@drawable/edittext_bg">

            <ImageView
                android:id="@+id/confirm_password_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/ic_baseline_person_24" />
            <EditText
                android:id="@+id/confirm_password_sign_up"
                android:layout_toRightOf="@id/confirm_password_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:background="@drawable/edittext_bg"
                android:hint="Confirm Password"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sign_up_layout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/confirm_password_layout"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@drawable/button_bg">
            <ImageView
                android:id="@+id/sign_up_image"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_baseline_person_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/sign_up_image"
                android:text="Sign in"
                android:textSize="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>